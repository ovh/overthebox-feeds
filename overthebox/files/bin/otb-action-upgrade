#!/bin/sh
# vim: set noexpandtab tabstop=4 shiftwidth=4 softtabstop=4 :

set -e

opkg update -V1

pkg_list=$(opkg list-upgradable)

if echo "$pkg_list" | grep -sq base-files ; then
	echo "Upgrading is not possible... Please consider a sysupgrade."
	exit 1
fi

echo "$pkg_list" | cut -d' ' -f1 | grep -v Multiple | \
	xargs -r -n 1 opkg upgrade --autoremove --force-overwrite -V1
