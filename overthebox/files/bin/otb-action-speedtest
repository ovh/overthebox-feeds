#!/bin/sh
# shellcheck disable=SC1091,SC2039
# vim: set noexpandtab tabstop=4 shiftwidth=4 softtabstop=4 :

interface="$1"    # Do the iperf only one this interface
test_time=5       # Do the iperf during 5 seconds
skip_test_time=1  # Skip the data of the first second of the test

server_ip="$(uci -q get glorytun.tun0.server)" || {
	echo "Can't find server ip"
	exit 1
}

. /lib/functions.sh
. /lib/functions/network.sh
. /lib/overthebox

trap : HUP INT TERM

setup() {
	otb_call_api POST ipt/iperf >/dev/null || echo "Couldn't start iperf"
	/etc/init.d/otb-qos stop 2>/dev/null
}

cleanup() {
	otb_call_api DELETE ipt/iperf >/dev/null
	/etc/init.d/otb-qos start
}

speedtest() {
	local ipaddr multipath

	if [ "$interface" ]; then
		[ "$interface" != "$1" ] && return
	else
		config_get multipath "$1" multipath "off"
		[ "$multipath" = "off" ] && return
	fi

	network_get_ipaddr ipaddr "$1"
	[ "$ipaddr" ] || return

	do_iperf() {
		iperf3 --client "$server_ip" --port 5008 \
		       --time "$test_time" --omit "$skip_test_time" \
		       --bind "$ipaddr" --json "$@" \
			   | jq "(.end.sum_received.bits_per_second // 0) / 1000 | floor"
	}

	upload="$(do_iperf)" || return
	download="$(do_iperf -R)" || return
	echo -e "[$1] \\tUpload: $upload kbit/s \\t\\tDownload: $download kbit/s"
}

setup

config_load network
config_foreach speedtest interface

cleanup
