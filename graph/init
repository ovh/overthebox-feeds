#!/bin/sh /etc/rc.common

START=90
STOP=10

USE_PROCD=1

validate_section() {
	uci_validate_section graph opentsdb "$1" \
		'enable:bool:1'            \
		'url:string'               \
		'freq:uinteger:60'
}

start_instance() {
	validate_section "$1" || return

	[ "$enable" = "0" ] && return
	[ -z "$url" ] && return

	hostname=$(uci -q get system.@system[0].hostname)

	procd_open_instance
	procd_set_param command /bin/graph "$url" "$hostname"
	procd_set_param respawn 0 "$freq" 0
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_close_instance
}

start_service() {
	config_load graph
	config_foreach start_instance opentsdb
}

service_triggers() {
	procd_add_reload_trigger graph network
}
